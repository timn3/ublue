# -------------------------------------------------
# Architecture / CPU
# -------------------------------------------------
CONFIG_64BIT=y
CONFIG_X86_64=y
CONFIG_X86=y
CONFIG_SMP=y
CONFIG_PREEMPT_DYNAMIC=y
CONFIG_X86_LUNAR_LAKE=y
CONFIG_NR_CPUS=256

# -------------------------------------------------
# ACPI / Power
# -------------------------------------------------
CONFIG_ACPI=y
CONFIG_ACPI_TABLE_UPGRADE=y
CONFIG_ACPI_WMI=y
CONFIG_PM=y
CONFIG_PM_SLEEP=y
CONFIG_INTEL_IDLE=y
CONFIG_INTEL_PSTATE=y
CONFIG_CPU_FREQ=y

# -------------------------------------------------
# PCI / DMA / IOMMU
# -------------------------------------------------
CONFIG_PCI=y
CONFIG_PCI_MSI=y
CONFIG_DMA_SHARED_BUFFER=y
CONFIG_IOMMU_SUPPORT=y
CONFIG_INTEL_IOMMU=y
CONFIG_INTEL_IOMMU_SVM=y

# -------------------------------------------------
# Firmware loading
# -------------------------------------------------
CONFIG_FW_LOADER=y
CONFIG_FW_LOADER_USER_HELPER=n

# -------------------------------------------------
# Media core
# -------------------------------------------------
CONFIG_MEDIA_SUPPORT=y
CONFIG_MEDIA_CONTROLLER=y
CONFIG_MEDIA_CONTROLLER_REQUEST_API=y
CONFIG_V4L2_SUBDEV_API=y
CONFIG_V4L2_FWNODE=y
CONFIG_MEDIA_PLATFORM_SUPPORT=y
CONFIG_MEDIA_PCI_SUPPORT=y
CONFIG_VIDEOBUF2_CORE=y
CONFIG_VIDEOBUF2_DMA_CONTIG=y
CONFIG_VIDEOBUF2_DMA_SG=y

# -------------------------------------------------
# Intel IPU7
# -------------------------------------------------
CONFIG_VIDEO_INTEL_IPU7=y
CONFIG_VIDEO_INTEL_IPU7_ISYS=y
CONFIG_VIDEO_INTEL_IPU7_PSYS=y
CONFIG_VIDEO_INTEL_IPU7_MMU=y
CONFIG_VIDEO_INTEL_IPU7_CPD=y

# -------------------------------------------------
# I2C + bridges
# -------------------------------------------------
CONFIG_I2C=y
CONFIG_I2C_DESIGNWARE_CORE=y
CONFIG_I2C_DESIGNWARE_PCI=y
CONFIG_VIDEO_SERDES=y
CONFIG_VIDEO_LT6911UXE=y

# -------------------------------------------------
# Filesystems (boot)
# -------------------------------------------------
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y
CONFIG_TMPFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# -------------------------------------------------
# Networking (basic)
# -------------------------------------------------
CONFIG_NET=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y

# -------------------------------------------------
# Disable modules (recommended)
# -------------------------------------------------
CONFIG_MODULES=n

# -------------------------------------------------
# Debug (off)
# -------------------------------------------------
CONFIG_DEBUG_KERNEL=n
CONFIG_DEBUG_INFO=n
